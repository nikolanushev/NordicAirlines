@model Nordic.Models.Destination

@{
    ViewBag.Title = "Details";
}

<div class="row" style="margin-top:20px">
    <div class="col-md-6">
        <h2 style="margin-left:500px">@Model.DestinationName</h2>
    </div>
    <div class="col-md-6" style="text-align:right; padding-top:20px">
        @if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.DestinationId }, new { @class = "btn btn-default" })
        }
        @Html.ActionLink("Go back", "Index", "Destinations", new { @class = "btn btn-default" })
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <div style="display:grid; justify-content:center">
            <img src="@Model.ImageUrl" style="width:950px; height:600px;" />
        </div>
        <br />
        <br />
        <div style="text-align:justify">
            @Html.DisplayFor(model => model.Description)
        </div>

    </dl>
</div>

<br />


@section details{
    <style type="text/css">
        body {
            background-color: #f5f5f5;
        }

    </style>
}




