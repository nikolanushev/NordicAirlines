@model Nordic.Models.ClientDestination

@{
    ViewBag.Title = "Pick a destination";
}

<div style="margin: 100px 220px 110px 220px; background-color: rgba(0, 0, 0, 0.4); display:grid; justify-content:center; color:white; border-radius:10px">
    @using (Html.BeginForm("InsertNewDestination", "Clients"))
    {
        <h3>Pick a destination for @Model.Client.ClientName</h3>
        <hr />
        <div class="form-group">
            @Html.HiddenFor(model => model.ClientId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Destinations, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.DestinationId, new SelectList(Model.Destinations, "DestinationId", "DestinationName"), new { @class = "form-control" })
                @Html.HiddenFor(model => model.DestinationId)
            </div>
        </div>
        <br/>

        <div class="form-group" style="text-align:right; margin-right:15px">
            <br />
            <br />
            <button type="submit" class="btn btn-default">Choose</button>
            @Html.ActionLink("Cancel", "Index", "Clients", new { @class = "btn btn-default" })

        </div>
     }
</div>
